---
import { Icon } from "astro-icon";
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="">
    <div
        class="container max-w-3xl p-4 mx-auto flex gap-2 sm:gap-4 items-center justify-between"
    >
        <div class="flex items-center gap-2 sm:gap-4">
            <div class="rounded-full aspect-square h-12 overflow-hidden">
                <img
                    class="object-cover"
                    src="/images/profile_image.jpg"
                    alt="Profile Image"
                />
            </div>
            <h1 class="text-lg sm:text-xl">Fernando Res√©ndiz</h1>
        </div>
        <nav
            class="relative self-stretch flex items-center gap-3 sm:gap-4 group"
        >
            <ul
                id="nav"
                class="scale-0 sm:scale-100 min-w-[12rem] sm:bg-transparent sm:dark:bg-transparent border-rpd-highlightLow dark:border-rp-highlightLow border-2 sm:border-0 rounded flex-col sm:flex-row bg-rpd-surface dark:bg-rp-surface sm:gap-4 absolute sm:relative sm:top-0 right-0 top-full flex"
            >
                <li>
                    <a class="hover:underline block sm:inline p-2" href="/"
                        >Home</a
                    >
                </li>
                <li>
                    <a class="hover:underline block sm:inline p-2" href="/"
                        >Projects</a
                    >
                </li>
                <li>
                    <a class="hover:underline block sm:inline p-2" href="/"
                        >Contact</a
                    >
                </li>
                <li>
                    <a class="hover:underline block sm:inline p-2" href="/"
                        >Blog</a
                    >
                </li>
            </ul>
            <ThemeToggle />
            <div
                id="navToggle"
                class="sm:hidden p-2 bg-rpd-surface dark:bg-rp-surface cursor-pointer"
            >
                <Icon class="h-6 siu" name="menu_line" />
            </div>
        </nav>
    </div>
</header>

<script>
    const nav = document.getElementById("nav")!;

    const handleNavToggle = () => {
        nav.classList.toggle("scale-0");
    };

    document
        .getElementById("navToggle")!
        .addEventListener("click", handleNavToggle);
</script>

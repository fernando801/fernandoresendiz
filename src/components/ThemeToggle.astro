---
import { Icon } from "astro-icon";
---

<div
    class="transition-colors duration-75 ease-linear toggleTheme cursor-pointer square rounded p-2 bg-rpd-iris dark:bg-rp-gold"
>
    <Icon
        class="transition-all ease-linear duration-75 hidden dark:block h-6 siu text-rpd-base dark:text-rp-base"
        name="sun_line"
    />
    <Icon
        class="transition-all ease-linear duration-75 block dark:hidden h-6 siu text-rpd-base dark:text-rp-base"
        name="moon_fill"
    />
</div>

<script>
    let theme: string = (() => {
        if (
            typeof localStorage !== "undefined" &&
            localStorage.getItem("theme")
        ) {
            return localStorage.getItem("theme") as string;
        }
        if (matchMedia("(prefers-color-scheme: dark)")) {
            return "dark";
        }
        return "light";
    })();

    if (theme === "dark") {
        document.documentElement.classList.add("dark");
    } else {
        document.documentElement.classList.remove("dark");
    }

    window.localStorage.setItem("theme", theme);

    const handleToggleTheme = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");

        const isDark = element.classList.contains("dark");
        window.localStorage.setItem("theme", isDark ? "dark" : "light");
    };

    document
        .querySelector(".toggleTheme")!
        .addEventListener("click", handleToggleTheme);
</script>

---
import "@fontsource/montserrat";
import "@fontsource/montserrat/variable.css";
// import "@fontsource/montserrat/variable-italic.css";
// import "@fontsource/lora";
// import "@fontsource/lora/variable.css";
// import "@fontsource/lora/variable-italic.css";
import "@fontsource/inter";
import "@fontsource/inter/variable.css";

import Header from "../components/Header.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Hi I'm Fernando Resendiz, Software Developer and Computer Science student. I enjoy developing apps that help solve people problems using modern web technologies."
        />
        <title>{title}</title>
        <script is:inline>
            document.documentElement.classList.add(localStorage.theme || "");
        </script>
    </head>
    <Header />
    <body
        class="bg-rpd-base dark:bg-rp-base text-rpd-text dark:text-rp-text transition-colors duration-100 ease-linear"
    >
        <slot />
    </body>

    <style is:global>
        h1 {
            @apply text-4xl font-extrabold;
        }
        h2 {
            @apply text-3xl font-bold;
        }
        h3 {
            @apply text-2xl font-bold;
        }
        h4 {
            @apply text-xl font-bold;
        }
        h5 {
            @apply text-lg font-bold;
        }
        h6 {
            @apply text-base font-bold;
        }
        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            @apply font-heading;
        }
        code {
            font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
                DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
                monospace;
        }
    </style>
</html>
